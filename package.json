{
  "name": "finite",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "engines": {
    "node": "20.x"
  },
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev:web": "npm run dev -w @finite/web",
    "dev:api": "npm run dev -w @finite/api",
    "build": "npm -w @finite/web run build && npm -w @finite/api run build && npm -w @finite/api run copy:web",
    "build:web": "npm run build -w @finite/web",
    "build:api": "npm run build -w @finite/api",
    "start": "npm -w @finite/api start",
    "start:api": "npm start -w @finite/api",
    "lint": "eslint .",
    "check-arch": "depcruise apps/web apps/api",
    "preview": "npm run preview -w @finite/web"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.9",
    "@prisma/adapter-pg": "^7.4.0",
    "@prisma/client": "^7.4.0",
    "@radix-ui/react-avatar": "^1.1.11",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@teamhanko/hanko-elements": "^2.4.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cors": "^2.8.6",
    "hono": "^4.11.9",
    "jose": "^6.1.3",
    "lucide-react": "^0.564.0",
    "pg": "^8.18.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.13.0",
    "tailwind-merge": "^3.4.0",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/node": "^24.10.1",
    "@types/pg": "^8.16.0",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "autoprefixer": "^10.4.24",
    "dependency-cruiser": "^17.3.8",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "playwright": "^1.58.2",
    "postcss": "^8.5.6",
    "prisma": "^7.4.0",
    "tailwindcss": "^4.1.18",
    "tsx": "^4.21.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.48.0",
    "vite": "^7.3.1"
  }
}
